<project version="2.0">
  <pkg-config>
    <pkg tool="perl">default</pkg>
  </pkg-config>
  <syspaths>
    <path>../libzeep</path>
    <path>/usr/include</path>
  </syspaths>
  <userpaths>
    <path>src</path>
  </userpaths>
  <libpaths>
    <path>/home/staf/maarten/lib64</path>
	<path>/usr/lib</path>
    <path>../libzeep</path>
  </libpaths>
  <files>
    <group name="Sources">
      <file>hsspsoap.cpp</file>
      <file>dssp.cpp</file>
      <file>blast.cpp</file>
      <file>fetchdbrefs.cpp</file>
      <file>mas.cpp</file>
      <file>matrix.cpp</file>
      <file>hssp-nt.cpp</file>
      <file>primitives-3d.cpp</file>
      <file>progress.cpp</file>
      <file>structure.cpp</file>
      <file>utils.cpp</file>
    </group>
    <group name="Libraries">
      <link>zeep</link>
      <link shared="true">boost_date_time</link>
      <link shared="true">boost_filesystem</link>
      <link shared="true">boost_iostreams</link>
      <link shared="true">boost_program_options</link>
      <link shared="true">boost_thread</link>
      <link shared="true">boost_regex</link>
      <link shared="true">boost_math_c99</link>
      <link shared="true">boost_system</link>
      <link shared="true">boost_timer</link>
    </group>
  </files>
  <resources resource-dir="rsrc">
    <resource>error.html</resource>
    <resource>index.html</resource>
  </resources>
  <targets>
    <target kind="Executable">
      <name>hsspsoap-Debug</name>
      <linkTarget>hsspsoap</linkTarget>
      <defines>
        <define>DEBUG</define>
        <define>LINUX</define>
        <define>USE_COMPRESSION</define>
      </defines>
      <cflags>
        <cflag>-O0</cflag>
        <cflag>-pthread</cflag>
        <cflag>-fopenmp</cflag>
        <cflag>-gdwarf-2</cflag>
        <cflag>-std=c++0x</cflag>
      </cflags>
      <warnings>
        <warning>all</warning>
        <warning>no-multichar</warning>
      </warnings>
    </target>
    <target kind="Executable">
      <name>hsspsoap-Release</name>
      <linkTarget>hsspsoap</linkTarget>
      <defines>
        <define>NDEBUG</define>
        <define>LINUX</define>
        <define>USE_COMPRESSION</define>
        <define>BOOST_FILESYSTEM_VERSION=2</define>
      </defines>
      <cflags>
        <cflag>-fopenmp</cflag>
        <cflag>-O3</cflag>
        <cflag>-pthread</cflag>
        <cflag>-std=c++0x</cflag>
      </cflags>
      <warnings>
        <warning>all</warning>
        <warning>no-multichar</warning>
      </warnings>
    </target>
  </targets>
</project>
